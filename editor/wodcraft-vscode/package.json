{
  "name": "wodcraft-language-support",
  "displayName": "WODCraft Language Support",
  "description": "Syntax highlighting and snippets for WODCraft (.wod) DSL",
  "publisher": "local",
  "version": "1.4.0",
  "engines": { "vscode": "^1.74.0" },
  "categories": ["Programming Languages"],
  "main": "./extension.js",
  "activationEvents": ["onLanguage:wodcraft"],
  "repository": {
    "type": "git",
    "url": "https://example.com/WODCraft.git"
  },
  "contributes": {
    "commands": [
      {
        "command": "wodcraft.openModule",
        "title": "WODCraft: Open Module"
      }
    ],
    "languages": [
      {
        "id": "wodcraft",
        "aliases": ["WODCraft", "wod"],
        "extensions": [".wod"],
        "configuration": "./language-configuration.json"
      }
    ],
    "grammars": [
      {
        "language": "wodcraft",
        "scopeName": "source.wod",
        "path": "./syntaxes/wod.tmLanguage.json"
      }
    ],
    "snippets": [
      {
        "language": "wodcraft",
        "path": "./snippets/wod.json"
      }
    ],
    "configuration": {
      "type": "object",
      "title": "WODCraft",
      "properties": {
        "wodcraft.cliExecutable": {
          "type": "string",
          "default": "wodc",
          "description": "Unified WODCraft CLI executable name (must be in PATH)."
        },
        "wodcraft.modulesPath": {
          "type": "string",
          "default": "modules",
          "description": "Path to vNext modules directory used for session compilation and imports."
        },
        "wodcraft.catalogPath": {
          "type": "string",
          "default": "data/movements_catalog.json",
          "description": "Path to a movement catalog JSON used for autocomplete (and optionally lint)."
        },
        "wodcraft.track": {
          "type": "string",
          "enum": ["RX", "INTERMEDIATE", "SCALED"],
          "default": "RX",
          "description": "Default track used by the linter."
        },
        "wodcraft.gender": {
          "type": "string",
          "enum": ["male", "female"],
          "default": "male",
          "description": "Default gender used by the linter."
        },
        "wodcraft.preferredAsLabel": {
          "type": "boolean",
          "default": true,
          "description": "Show preferred movement name as completion label (inserts snake_case id)."
        }
      }
    }
  }
}
